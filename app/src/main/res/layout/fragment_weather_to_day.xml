<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_to_day">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mail_liner_layout"
        android:layout_marginBottom="300dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_main"
            android:textColor="@color/colorFontWhite"
            android:text="19"
            android:textSize="85sp"
            android:layout_gravity="center_vertical"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/current_weacher"
            android:textColor="@color/colorFontWhite"
            android:textSize="24sp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/mail_liner_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:id="@+id/lin_layout_deteils">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:rowCount="5"
            android:columnCount="2"
            android:orientation="horizontal"
            android:id="@+id/grid_layout_deteils"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">



            <TextView
                android:layout_height="wrap_content"
                android:layout_width="155dp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/location_label"
                android:textColor="@color/colorFontWhite"
                android:text="@string/text.current.location"
                android:textSize="24sp"
                android:layout_row="1"
                android:layout_column="0" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_value"
                android:textColor="@color/colorFontWhite"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:text="Запорожье"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:layout_row="1"
                android:layout_column="1" />


            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.humidity"
                android:id="@+id/humidity_label"
                android:textColor="@color/colorFontWhite"

                android:textSize="24sp"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="85"
                android:id="@+id/humidity_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.pressure"
                android:id="@+id/pressure_label"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1000"
                android:id="@+id/pressure_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.wind"
                android:id="@+id/wind_label"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1000"
                android:id="@+id/wind_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="4"
                android:layout_column="1" />

        </GridLayout>

    </LinearLayout>
</FrameLayout>
