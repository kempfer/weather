<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="com.example.zotov.weather.MainActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_alignBottom="@+id/mail_liner_layout"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mail_liner_layout"
        android:layout_marginBottom="300dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_main"
            android:textColor="@color/colorFontWhite"
            android:text="19"
            android:textSize="100sp"
            android:layout_gravity="center_vertical"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°С"
            android:textSize="24sp"
            android:textColor="@color/colorFontWhite"
            android:id="@+id/textView"
            android:layout_marginTop="-28dp"

            />




    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/mail_liner_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="272dp"
        android:id="@+id/lin_layout_deteils">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:rowCount="5"
            android:columnCount="2"
            android:orientation="horizontal"
            android:id="@+id/grid_layout_deteils"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="155dp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:id="@+id/location_label"
                android:textColor="@color/colorFontWhite"
                android:text="@string/text.current.location"
                android:textSize="24sp"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_value"
                android:textColor="@color/colorFontWhite"
                android:text="Запорожье"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_height="wrap_content"
                android:id="@+id/temperature_label"
                android:textColor="@color/colorFontWhite"
                android:text="@string/text.current.temp"
                android:textSize="24sp"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature_value"
                android:textColor="@color/colorFontWhite"
                android:layout_marginLeft="10dp"
                android:text="13"
                android:textSize="24sp"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.humidity"
                android:id="@+id/humidity_label"
                android:textColor="@color/colorFontWhite"

                android:textSize="24sp"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="85"
                android:id="@+id/humidity_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.pressure"
                android:id="@+id/pressure_label"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1000"
                android:id="@+id/pressure_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="155dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="@string/text.current.wind"
                android:id="@+id/wind_label"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1000"
                android:id="@+id/wind_value"
                android:textColor="@color/colorFontWhite"
                android:textSize="24sp"
                android:layout_row="4"
                android:layout_column="1" />

        </GridLayout>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_autorenew_black_24dp"
            android:id="@+id/button_refresh"
            android:layout_gravity="center_horizontal"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>


</RelativeLayout>
